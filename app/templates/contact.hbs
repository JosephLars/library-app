<h1>Contact Page</h1>

{{#if responseMessage}}
    <div class="alert alert-success">
        <h4>Thank you! Your message is sent.</h4>
        <p>Email: {{emailAddress}}</p>
        <p>Message: {{message}}</p>
    </div>
{{else}}
    <div class="form-group">
        <label>Your email address*:</label>
        {{input type="email" value=emailAddress class="form-control" placeholder="Your email address" autofocus="autofocus"}}
    </div>
    <div class="form-group">
        <label>Your message*:</label>
        {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="5" value=message}}
    </div>
    <button class="btn btn-success" disabled={{isNotValid}} {{action 'saveInvitation'}}>Send</button>
{{/if}}